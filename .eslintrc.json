{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".json"]
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/strict-boolean-expressions": "off"
    },
    "ignorePatterns": ["webpack.config.js", "index.html"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
